<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kolesalite.controller.MainController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
            <Label text="KolesaLite" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label fx:id="welcomeLabel" style="-fx-font-size: 16px;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="profileButton" text="Профиль" onAction="#handleProfile"
                    style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
            <Button fx:id="logoutButton" text="Выйти" onAction="#handleLogout"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="carsContainer" spacing="10" style="-fx-padding: 15;">
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>